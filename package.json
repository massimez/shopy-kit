{
	"name": "shopy-kit",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"check": "biome check --write .",
		"dev": "turbo dev",
		"build": "turbo build",
		"check-types": "turbo check-types",
		"dev:native": "turbo -F native dev",
		"dev:admin-store": "turbo -F @workspace/admin-store dev",
		"dev:api": "turbo -F @workspace/api dev",
		"db:push": "turbo -F @workspace/api db:push",
		"db:studio": "turbo -F @workspace/api db:studio",
		"db:generate": "turbo -F @workspace/api db:generate",
		"db:migrate": "turbo -F @workspace/api db:migrate"
	},
	"simple-git-hooks": {
		"pre-commit": "bun run check .",
		"commit-msg": "bun commitlint --edit $1"
	},
	"catalog": {
		"react": "19.2.4",
		"react-dom": "19.2.4",
		"@types/react": "19.2.14",
		"@types/react-dom": "19.2.3",
		"next": "16.1.6",
		"@next/bundle-analyzer": "16.1.6",
		"react-hook-form": "7.71.1",
		"@hookform/resolvers": "5.2.2",
		"zod": "4.3.6",
		"class-variance-authority": "0.7.1",
		"clsx": "2.1.1",
		"tailwind-merge": "3.4.0",
		"tailwindcss": "4.1.18",
		"@tailwindcss/postcss": "4.1.17",
		"next-themes": "0.4.6",
		"lucide-react": "0.563.0",
		"sonner": "2.0.7",
		"@tanstack/react-query": "5.90.21",
		"next-intl": "4.8.2",
		"better-auth": "1.4.18",
		"nuqs": "2.8.8",
		"typescript": "5.9.3",
		"@types/node": "24.10.1",
		"@biomejs/biome": "^2.3.10",
		"tw-animate-css": "1.4.0",
		"drizzle-kit": "0.31.6",
		"tsdown": "0.17.0-beta.1"
	},
	"dependencies": {},
	"devDependencies": {
		"@types/node": "catalog:",
		"@types/bun": "latest",
		"@biomejs/biome": "catalog:",
		"@commitlint/cli": "20.1.0",
		"@commitlint/config-conventional": "20.0.0",
		"simple-git-hooks": "2.13.1",
		"turbo": "2.6.1"
	},
	"peerDependencies": {
		"typescript": "5.9.3"
	},
	"packageManager": "bun@1.3.1",
	"engines": {
		"node": ">=20.0.0",
		"bun": ">=1.2.0"
	}
}
